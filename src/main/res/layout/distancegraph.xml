<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/chartLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:text="@string/Distance_vs_Time_distribution"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar1Chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/chartLabel"
        android:layout_marginTop="35dp" />

    <include
        android:id="@+id/spinner2"
        layout="@layout/filterbar"
        android:layout_width="wrap_content"
        android:layout_height="84dp" /> <!-- Position below the label -->

</RelativeLayout>
